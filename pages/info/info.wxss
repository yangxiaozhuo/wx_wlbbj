.wrapper {
  padding-top: 20rpx;
}
.profile {
  height: 180rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
}
.profile .avatar {
  width: 120rpx;
  height: 120rpx;
  margin-right: 40rpx;
  border-radius:50%;
}
.profile .info {
  display: flex;
  flex: 1;
  font-size: 24rpx;
  color: #abb4bf;
}
.profile .name {
  font-size: 40rpx;
  color: #333;
  width: 100%;
}
.profile .info .text {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  /* display: -webkit-box; */
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.profile .more {
  display: flex;
  align-items: center;
}
.profile .more image {
  width: 20rpx;
  height: 40rpx;
}
.profile .more .reddot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #ff5959;
  margin-right: 10rpx;
}
.profile .more .edit {
  color: #3281ff;
  height: 60rpx;
  padding: 0 30rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 8rpx;
  /* border: 1px solid #3281ff; */
}