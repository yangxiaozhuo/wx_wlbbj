/* 在 wxss 中设置样式 */
.container {
  padding: 20rpx;
}

textarea {
  height: 200rpx;
  border: 1rpx solid #ccc;
  margin-bottom: 20rpx;
}

.picker {
  border: 1rpx solid #ccc;
  padding: 10rpx;
  margin-bottom: 20rpx;
}

.upload-btn {
  border: 1rpx solid #ccc;
  padding: 10rpx;
  text-align: center;
  margin-bottom: 10rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
}

.image-list image {
  width: 100rpx;
  height: 100rpx;
  margin: 5rpx;
}

.submit-btn {
  background-color: #007bff;
  color: #fff;
  text-align: center;
  padding: 10rpx;
}
